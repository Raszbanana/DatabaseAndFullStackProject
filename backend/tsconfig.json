{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS", // For Node.js
    "outDir": "./dist",
    "esModuleInterop": true, // import common js modules as es6 modules
    "rootDir": "../backend",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
